
<section class="animate__animated animate__zoomIn product-section pt-4 col-sm-11 col-md-9 col-lg-7">
    <div class="product-container">
<div class="row  justify-content-center">
    <div class="col-lg-10">
        <div class="wrap d-md-flex">
            <div class="text-wrap p-4 p-lg-5 d-flex img d-flex align-items-end"
            style="background-image: url(images/product1.jpg);"
            >
            <div class="text w-100">
                <h2 class="mb-4">
                   Add Products !
                </h2>
                <p>Just fill up the products data and add your products.</p>
            </div>
            </div>
            <div class="login-wrap p-4 p-md-5">
                <h3 class="mb-3">My Product</h3>
            <form action="/product" method="POST" class="product-form">
            
            <div class="row">               
                {{!-- Title --}}
                  <div class="col-md-12">
                    <div class="form-group d-flex align-items-center">
                        <label for="title" class="label">Title</label>
                        <input type="text" class="form-control"
                        name="title"
                        placeholder="Title">
                    </div>
                </div>
                {{!-- Discount--}}
                  <div class="col-md-12">
                    <div class="form-group d-flex align-items-center">
                        <label for="discount" class="label">Discount(%) </label>
                        <input type="number" class="form-control"
                        name="discount"
                        placeholder="Discount">
                    </div>
                </div>
                  {{!-- Quantity--}}
                  <div class="col-md-12">
                    <div class="form-group d-flex align-items-center">
                        <label for="quantity" class="label">Quantity</label>
                        <input type="number" class="form-control"
                        name="quantity"
                        placeholder="Quantity">
                    </div>
                </div>
                 {{!-- Price--}}
                  <div class="col-md-12">
                    <div class="form-group d-flex align-items-center">
                        <label for="price" class="label">Price(€) </label>
                        <input type="number" class="form-control"
                        name="price"
                        placeholder="Price">
                    </div>
                </div>
              
                {{!-- Button --}}
                <div class="col-md-12">
                    <div class="form group">
                        <button type="submit" class="btn btn-secondary submit p-3 mt-3"
                       >Add product</button>
                    </div>
                </div>
            </div>
            </form>
            </div>
        </div>
    </div>
</div>
    </div>
  {{!--container end --}}
</section>
 {{!-- Show all Products --}}
             
  <div class="items-container">
      <div class="row"> 
          <div class="col d-flex justify-content-around">
             {{#if product}}
               {{#each product}}
               <div class="card" style="width: 15rem;">
               <div class="card-body">
               <h5 class="card-title">Title : {{title}} </h5>
               <h6 class="card-subtitle mb-2">Discount : {{discount}}% </h6>
               <h6 class="card-subtitle mb-2">Quantity : {{quantity}} </h6>
               <h6 class="card-subtitle mb-2"> Price : {{price}}€</h6>
               <a class="btn-delete btn-danger" href="/product/delete/{{_id}}">Delete</a>
               <a class="btn-update btn-primary" href="/product/update/{{_id}}">Update</a>
              </div>
               </div>
                {{/each}}
              {{/if}}
             </div>

        </div>

     </div>
