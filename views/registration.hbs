
<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center mb-5">
                <h2 class="heading-section">Registration Form
                </h2>
            </div>
        </div>

<div class="row justify-content-center">
    <div class="col-lg-10">
        <div class="wrap d-md-flex">
            <div class="text-wrap p-4 p-lg-5 d-flex img d-flex align-items-end"
            style="background-image: url(images/bg.jpg);"
            >
            <div class="text w-100">
                <h2 class="mb-4">
                   Welcome to Registration form
                </h2>
                <p>This is a User Management System Site, where you can add your products, update and remove your products.</p>
            </div>
            </div>
            <div class="login-wrap p-4 p-md-5">
                <h3 class="mb-3">Create an account</h3>
            <form action="/newUser" method="POST" class="registration-form">
            
            <div class="row">
                {{!-- name --}}
                <div class="col-md-12">
                    <div class="form-group d-flex align-items-center">
                        <label for="name" class="label">Name</label>
                        <input type="text" class="form-control"
                        name="name"
                        placeholder="Your Name">
                    </div>
                </div>
                {{!-- Surname --}}
                  <div class="col-md-12">
                    <div class="form-group d-flex align-items-center">
                        <label for="surname" class="label">Surname</label>
                        <input type="text" class="form-control"
                        name="surname"
                        placeholder="Your Surname">
                    </div>
                </div>
                {{!-- Country --}}
                  <div class="col-md-12">
                    <div class="form-group d-flex align-items-center">
                        <label for="country" class="label">Country</label>
                        <input type="text" class="form-control"
                        name="country"
                        placeholder="Your Country">
                    </div>
                </div>
                {{!-- Address --}}
                  <div class="col-md-12">
                    <div class="form-group d-flex align-items-center">
                        <label for="address" class="label">Address</label>
                        <input type="text" class="form-control"
                        name="address"
                        placeholder="Your Address">
                    </div>
                </div>
                {{!-- E-mail --}}
                  <div class="col-md-12">
                    <div class="form-group d-flex align-items-center">
                        <label for="email" class="label">E-mail</label>
                        <input type="text" class="form-control"
                        name="email"
                        placeholder="jospetash03@web.de">
                    </div>
                </div>
                {{!-- Password --}}
                  <div class="col-md-12">
                    <div class="form-group d-flex align-items-center">
                        <label for="password" class="label">Password</label>
                        <input type="password" class="form-control"
                        name="password">
                    </div>
                </div>
                {{!-- Terms & agreements --}}
                <div class="col-md-12 my-4">
                    <div class="form-group">
                        <div class="w-100">
                            <label class="checkbox-wrap checkbox-primary">
                                "I agree all statements in terms of service"
                                <input type="checkbox" checked>
                                <span class="checkmark">
                                    ::after
                                    </span>
                            </label>
                        </div>
                    </div>
                </div>
                {{!-- Button --}}
                <div class="col-md-12">
                    <div class="form group">
                        <button type="submit" class="btn btn-secondary submit p-3">Submit</button>
                    </div>
                </div>
            </div>
            </form>
            {{!-- Log in for registered members --}}
            <div class="w-100 text-center">
                <p class="mt-4">
                    "I'm already a member! "
                    <a href="#login">Log In</a>
                </p>
            </div>
            </div>
        </div>
    </div>
</div>
  {{!--container end --}}
    </div>
</section>